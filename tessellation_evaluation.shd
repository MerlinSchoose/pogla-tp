void main() {
  vec4 p1 = mix(gl_in[0].gl_Position, gl_in[1].gl_Position, gl_TessCoord.x);
  vec4 p2 = mix(gl_in[3].gl_Position, gl_in[2].gl_Position, gl_TessCoord.x);
  vec4 p = mix(p1, p2, gl_TessCoord.y);

  p.y = sin(2.f * 3.14f * gl_TessCoord.x + anim_time) / 10.0f;
  p.y += sin(2.f * 3.14f * gl_TessCoord.y + anim_time + 0.2f) / 8.0f;

  color = vec3(gl_TessCoord.x, gl_TessCoord.y, mod(anim_time, 1.0f));

  gl_Position = projection_matrix * model_matrix * view_matrix * p;
}